{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "litepost",
  "version": "0.1.0",
  "identifier": "com.litepost.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "litepost",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ],
    "publisher": "LitePost"
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/LykosAI/LitePost/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "UpRSVY2U3R1RUpjSEQrQ0lTNUtLQVZXaGxhMUZsajA1MXEK"
    }
  }
}
